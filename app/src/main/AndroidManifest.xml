<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iiitb.vts" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:label="@string/title_activity_login_screen" >
        </activity>
        <activity
            android:name=".NewUser"
            android:label="@string/title_activity_new_user" >
        </activity>
        <activity
            android:name=".NewUserScreen"
            android:label="@string/title_activity_new_user_screen" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".RegisteredUser"
            android:label="@string/title_activity_registered_user" >
        </activity>
        <activity
            android:name=".ForgotPasswordScreen"
            android:label="@string/title_activity_forgot_password_screen" >
        </activity>
        <activity
            android:name=".UserDetailsScreen"
            android:label="@string/title_activity_user_details_screen" >
        </activity>
        <activity
            android:name=".TicketScreen"
            android:label="@string/title_activity_ticket_screen" >
        </activity>
        <activity
            android:name=".TicketUseCasesScreen"
            android:label="@string/title_activity_ticket_use_cases_screen" >
        </activity>
        <activity
            android:name=".RegisteringBarcode"
            android:label="@string/title_activity_registering_barcode" >
        </activity>
        <activity
            android:name=".MakingTransactionScreen"
            android:label="@string/title_activity_making_transaction_screen" >
        </activity>
        <activity
            android:name=".RechargeScreen"
            android:label="@string/title_activity_recharge_screen" >
        </activity>
        <activity
            android:name=".PassengerTransaction"
            android:label="@string/title_activity_passenger_transaction" >
        </activity>
        <activity
            android:name=".MyTotalScreen"
            android:label="@string/title_activity_my_total_screen" >
        </activity>
        <activity
            android:name=".MyTransactions"
            android:label="@string/title_activity_my_transactions" >
        </activity>
    </application>

</manifest>
