<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.iiitb.vts.MakingTransactionScreen"
    android:id="@+id/TransactionScreen"
    android:background="#26ae90">

    <EditText
        android:id="@+id/Source"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="120dp"
        android:background="#ffffff"
        android:hint="Enter Source"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#999999" />

    <EditText
        android:id="@+id/Destination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:hint="Enter Destination"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/Source"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#999999" />

    <EditText
        android:id="@+id/Ticketcharge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:hint="Enter amount"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:layout_below="@+id/Destination"
        android:textColorHint="#999999" />

   <Button
        android:id="@+id/MakeTransactionButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:background="#eceef1"
        android:text="Book Ticket"
        android:textColor="#26ae90"
        android:layout_below="@+id/Ticketcharge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
