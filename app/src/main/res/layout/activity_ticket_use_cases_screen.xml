<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.iiitb.vts.TicketUseCasesScreen"
    android:id="@+id/TicketUsecases"
    android:background="#26ae90">

    <Button

        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Register New Barcode"
        android:id="@+id/RegisterBarCode"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Make Transaction"
        android:id="@+id/MakeTransaction"
        android:layout_centerHorizontal="true"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/RegisterBarCode"/>

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Recharge the card"
        android:id="@+id/RechargeCard"
        android:layout_centerHorizontal="true"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/MakeTransaction"/>

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="View Passenger Transactions"
        android:id="@+id/PassengerTransactions"
        android:layout_centerHorizontal="true"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/RechargeCard"/>
<!--
    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="My Collection Today"
        android:id="@+id/TodayTotal"
        android:layout_centerHorizontal="true"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/PassengerTransactions"/>
-->
</RelativeLayout>
