<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.iiitb.vts.LoginScreen"
    android:background="#26ae90"
    android:id="@+id/loginScreen">



    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/UserImage"
        android:src="@drawable/u"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ramya"
        android:id="@+id/Name"
        android:textSize="32dp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/UserImage"
        android:layout_toRightOf="@+id/UserImage"
        android:layout_toEndOf="@+id/UserImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profile"
        android:id="@+id/Profile"
        android:textSize="20dp"
        android:textColor="#70000000"
        android:clickable="true"
        android:textStyle="italic"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/Profile"
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout">
        <View android:gravity="center_vertical" android:layout_gravity="center_vertical" android:background="#ffffffff" android:layout_width="0.0dip" android:layout_height="2.0dip" android:layout_weight="48.0" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance"
        android:id="@+id/BalanceText"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1000"
        android:id="@+id/AmountBalance"
        android:textSize="75dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_below="@+id/BalanceText"
        android:layout_centerHorizontal="true" />

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/AmountBalance"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout1">
    <View android:gravity="center_vertical" android:layout_gravity="center_vertical" android:background="#ffffffff" android:layout_width="0.0dip" android:layout_height="2.0dip" android:layout_weight="48.0" />
    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="My Transactions"
        android:id="@+id/MyTransactions"
        android:background="#eceef1"
        android:textColor="#26ae90"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true" />
